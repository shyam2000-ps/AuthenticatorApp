            android:layout_width="342dp"
            android:layout_height="173dp"
            android:fontFamily="sans-serif-medium"
            android:text="Hair must be maintained in good condition Clean,  dry hair (no split ends) from any gender and of  any natural colour Straight, wavy, curly, permed  or chemically straightened hair Dyed, bleached/  highlighted hair with natural colour We do not  accept dyed hair with unnatural colours  (blue, green, purple). "
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.502" />

