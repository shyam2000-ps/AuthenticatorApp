    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F7F7"
    tools:context=".home">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="303dp"
        android:layout_height="142dp"
